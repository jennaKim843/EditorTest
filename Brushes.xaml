<!-- Resources/Styles/Brushes.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base SolidColorBrush-->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{DynamicResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{DynamicResource PrimaryForegroundColor}" />
    
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}" />
    <SolidColorBrush x:Key="SubMenuBackgroundBrush" Color="{StaticResource SubMenuBackgroundColor}" />
    <SolidColorBrush x:Key="MainContentBackground" Color="{StaticResource MainContentBackgroundColor}"/>

    <!-- Text SolidColorBrush -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondary}" />
    <SolidColorBrush x:Key="TitleTextBrush" Color="{StaticResource TitleTextColor}" />
    <SolidColorBrush x:Key="SubMenuTextBrush" Color="{StaticResource SubMenuTextColor}" />
    <SolidColorBrush x:Key="SelectedRowTextBrush" Color="{StaticResource SelectedRowTextColor}" />

    <!-- TabControl SolidColorBrush -->
    <SolidColorBrush x:Key="TabBackground" Color="{DynamicResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="TabBorderBrush" Color="{DynamicResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="TabSelectedBorderBrush" Color="{DynamicResource TabSelectedBorderColor}" />
    <SolidColorBrush x:Key="TopBarBrush" Color="{StaticResource TopBarColor}" />
    <SolidColorBrush x:Key="TabUnderlineBorderBrush" Color="{StaticResource TabUnderlineBorderColor}" />
    <SolidColorBrush x:Key="TabContentBackgroundBrush" Color="{StaticResource TabContentBackgroundColor}" />

    <!-- Grid SolidColorBrush -->
    <SolidColorBrush x:Key="HeaderBackground" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="HeaderForeground" Color="{StaticResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="{StaticResource HeaderBorderBrushColor}" />
    <SolidColorBrush x:Key="RowBackground" Color="{StaticResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="RowForeground" Color="{StaticResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="RowBorderBrush" Color="{StaticResource RowBorderBrushColor}" />
    <SolidColorBrush x:Key="SelectedRowBackgroundBrush" Color="{StaticResource SelectedRowBackgroundColor}" />
    <SolidColorBrush x:Key="AlternatingRowBackgroundBrush" Color="{StaticResource AlternatingRowBackgroundColor}" />

    <!-- FormControl SolidColorBrush -->
    <SolidColorBrush x:Key="FormTextPrimaryBrush" Color="{StaticResource FormTextPrimaryColor}" />
    <SolidColorBrush x:Key="FormLabelTextBrush" Color="{StaticResource FormLabelTextColor}" />
    <SolidColorBrush x:Key="FormBorderBrush" Color="{StaticResource FormBorderBrushColor}" />
    <SolidColorBrush x:Key="FormCheckBoxForegroundBrush" Color="{StaticResource FormCheckBoxForegroundColor}" />
    <SolidColorBrush x:Key="FormCheckBoxBrush" Color="{StaticResource FormLabelTextColor}" />
    <SolidColorBrush x:Key="FormTextBoxBorderBrush" Color="{StaticResource FormTextBoxBorderBrushColor}" />

    <!-- Button SolidColorBrush -->
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="ButtonMouseOverBrush" Color="{StaticResource ButtonMouseOverColor}" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{StaticResource ButtonPressedColor}" />
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="{StaticResource ButtonDisabledColor}" />
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{StaticResource ButtonDisabledBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{StaticResource ButtonDisabledForegroundColor}" />
    <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="{StaticResource SecondaryButtonBackgroundColor}" />
    <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="{StaticResource SecondaryButtonForegroundColor}" />
    <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="{StaticResource SecondaryButtonBorderBrushColor}" />
    <SolidColorBrush x:Key="SecondaryMouseOverBrush" Color="{StaticResource SecondaryMouseOverColor}" />
    <SolidColorBrush x:Key="TertiaryButtonBackgroundBrush" Color="{StaticResource TertiaryButtonBackgroundColor}" />
    <SolidColorBrush x:Key="TertiaryButtonForegroundBrush" Color="{StaticResource TertiaryButtonForegroundColor}" />
    <SolidColorBrush x:Key="TertiaryButtonBorderBrush" Color="{StaticResource TertiaryButtonBorderBrushColor}" />
    <SolidColorBrush x:Key="TertiaryMouseOverBrush" Color="{StaticResource TertiaryMouseOverColor}" />
    <SolidColorBrush x:Key="CancleButtonBackgroundBrush" Color="{StaticResource CancleButtonBackgroundColor}" />
    <SolidColorBrush x:Key="CancleButtonForegroundBrush" Color="{StaticResource CancleButtonForegroundColor}" />
    <SolidColorBrush x:Key="CancleButtonMouseOverBrush" Color="{StaticResource HeaderBorderBrushColor}" />
    <SolidColorBrush x:Key="CancleButtonBorderBrush" Color="{StaticResource CancleButtonBorderBrushColor}" />
    <SolidColorBrush x:Key="SelectedSubMenuButtonBrush" Color="{StaticResource SelectedSubMenuButtonColor}" />
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="{StaticResource ComboBoxBackgroundColor}" />
    <SolidColorBrush x:Key="TransferButtonBackgroundBrush" Color="{StaticResource TransferButtonBackgroundColor}" />
    <SolidColorBrush x:Key="TransferButtonForegroundBrush" Color="{StaticResource TransferButtonForegroundColor}" />
    <SolidColorBrush x:Key="TransferButtonBorderBrush" Color="{StaticResource TransferButtonBorderBrushColor}" />


    <!-- SearchBoxContainer SolidColorBrush -->
    <SolidColorBrush x:Key="SearchBoxBackgroundBrush" Color="{StaticResource SearchBoxBackgroundColor}" />
    <SolidColorBrush x:Key="SearchBoxBorderBrush" Color="{StaticResource SearchBoxBorderBrushColor}" />

    <!-- EditorDiff SolidColorBrush -->
    <SolidColorBrush x:Key="DiffInsertBrush" Color="{StaticResource DiffInsertColor}" />
    <SolidColorBrush x:Key="DiffDeleteBrush" Color="{StaticResource DiffDeleteColor}" />
    <SolidColorBrush x:Key="DiffModifyBrush" Color="{StaticResource DiffModifyColor}" />
    <SolidColorBrush x:Key="DiffSelectionBrush" Color="{StaticResource DiffSelectionColor}" />
    <SolidColorBrush x:Key="DiffSelectionBorderBrush" Color="{StaticResource DiffSelectionBorderColor}" />

</ResourceDictionary>